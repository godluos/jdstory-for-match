<div class="col-md-4 col-centered">
  <h2>注册</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, label: "邮箱账号", required: true, autofocus: true %>
      <%= f.input :username, label: "用户名", required: true, autofocus: true %>
      <%= f.input :password, label: "密码", required: true, hint: ("密码不能小于#{@minimum_password_length}位数" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: "再次输入密码", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "注册"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<div class="take"></div>
