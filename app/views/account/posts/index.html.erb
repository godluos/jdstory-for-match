<div class="col-md-10 col-centered">
  <h2 class="text-center"> 我发表过的评论 </h2>
  <div class="col-md-8 col-centered">
    <% @posts.each do |post| %>
      <div class="panel panel-info">
        <div class="panel-heading">
          <span><b>商品名称：<%= post.product.title %></b></span>
          <span class="pull-right"><%= post.created_at.to_s(:long) %></span>
        </div>
        <div class="panel-body">
          <%= simple_format(post.content) %>
        </div>
      </div>
    <% end %>
    <%= link_to("返回个人资料页", account_users_path, class:"btn btn-primary btn-md" ) %>
    <%= link_to("返回首页", root_path, class:"btn btn-success btn-md"  ) %>
  </div>
</div>




